                                    $KASCADEBASE/inputs/ksAomega$Pspec'.config' 

        cp -v $KASCADEBASE/inputs/ksAomega$parspec'.config'  \
                                    $KASCADEBASE/inputs/ksAomega$He4spec'.config' 
